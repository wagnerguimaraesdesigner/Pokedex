<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="José Antonio Gallo Junior">
    <title>Pokédex</title>

    <!-- Favicons -->
    <link rel="apple-touch-icon" href="~/img/favicons/apple-touch-icon.png" sizes="180x180">
    <link rel="icon" href="~/img/favicons/favicon-32x32.png" sizes="32x32" type="image/png">
    <link rel="icon" href="~/img/favicons/favicon-16x16.png" sizes="16x16" type="image/png">
    <link rel="icon" href="~/img/favicons/favicon.ico">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="css/admin.css" rel="stylesheet">
</head>

<body>
    <nav class="navbar navbar-dark sticky-top bg-danger flex-md-nowrap p-0 shadow">
        <a class="navbar-brand col-md-3 col-lg-2 mr-0 px-3 fs-4" asp-action="Index" asp-controller="Admin">
            <img src="~/img/favicons/favicon-32x32.png" alt="Pokeball" class="me-2">&nbsp;
            Pokédex
        </a>
        <button class="navbar-toggler position-absolute d-md-none collapsed" type="button" data-toggle="collapse"
            data-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <ul class="navbar-nav px-3">
            <div class="nav-item dropdown">
                <button class="nav-link text-white dropdown-toggle" type="button" data-bs-toggle="dropdown"
                    aria-expanded="false">
                    <img style="width:40px;height:40px; object-fit:cover; border-radius:30px"
                        src="~/img/usuarios/avatar.png">&nbsp;
                    Olá Usuário!</a>
                </button>
                <ul class="dropdown-menu" style="position:absolute!important; margin-left:-20px!important">
                    <li><a class="dropdown-item" href="#">Gerenciar Conta</a></li>
                    <li><a class="dropdown-item" href="#">Sair</a></li>
                </ul>
            </div>
        </ul>

    </nav>

    <div class="container-fluid">
        <div class="row">
            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                <div class="sidebar-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active fs-6" asp-controller="Admin" asp-action="Index">
                                <i class="bi bi-house-fill fs-5"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fs-6" asp-controller="Pokemons" asp-action="Index">
                                <i class="bi bi-bug-fill fs-5"></i>
                                Pokémons
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fs-6" href="#">
                                <i class="bi bi-fire fs-5"></i>
                                Tipos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fs-6" asp-controller="Regioes" asp-action="Index">
                                <i class="bi bi-globe-americas fs-5"></i>
                                Regiões
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fs-6" asp-controller="Generos" asp-action="Index">
                                <i class="bi bi-gender-ambiguous fs-5"></i>
                                Gêneros
                            </a>
                        </li>

                    </ul>
                </div>
            </nav>

            <main role="main" class="col-md-9 ms-sm-auto col-lg-10 px-md-4 pt-3">
                @RenderBody()
            </main>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>